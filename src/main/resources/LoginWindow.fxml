<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ratingsystem.ui.LoginController" stylesheets="@styles.css">
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
        </padding>
        
        <Label text="Rating System" textFill="#1a73e8">
            <font>
                <Font size="32.0" />
            </font>
        </Label>
        
        <Label text="Система управления рейтингами аттестации">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        
        <VBox spacing="15.0">
            <Label text="Имя пользователя:" style="-fx-font-weight: bold" />
            <TextField fx:id="usernameField" promptText="Введите имя пользователя" />
            
            <Label text="Пароль:" style="-fx-font-weight: bold" />
            <PasswordField fx:id="passwordField" promptText="Введите пароль" />
        </VBox>
        
        <Label fx:id="errorLabel" textFill="#d32f2f">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
        
        <HBox spacing="10.0">
            <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="120.0" style="-fx-font-size: 12;" text="Вход">
                <font>
                    <Font size="12.0" />
                </font>
            </Button>
            <Button fx:id="registerButton" onAction="#handleRegister" prefWidth="120.0" style="-fx-font-size: 12;" text="Регистрация">
                <font>
                    <Font size="12.0" />
                </font>
            </Button>
        </HBox>
        
        <Label text="Demo: admin / admin123" style="-fx-font-style: italic" />
    </VBox>
</AnchorPane>
